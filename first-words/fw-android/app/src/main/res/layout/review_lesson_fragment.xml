<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/lessonNameTxt"
        android:text="Review Lesson"
        style="@style/AppTitle"
        />

    <TextView
        android:id="@+id/letter"
        style="@style/FlashCardLetterStyle"
        android:text=""
        android:layout_alignLeft="@+id/flashCardImage"
        android:layout_below="@+id/lessonNameTxt"
        />

    <TextView
        android:id="@+id/letter2"
        style="@style/FlashCardLetterStyle"
        android:text=""
        android:gravity="right"
        android:layout_below="@+id/lessonNameTxt"
        android:layout_alignRight="@+id/flashCardImage"
        />

    <ImageView android:id="@+id/flashCardImage"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/letter"
        />

    <TextView
        android:id="@+id/numberText"
        style="@style/ImgTextOverlay"
        android:layout_alignLeft="@+id/flashCardImage"
        android:layout_alignTop="@+id/flashCardImage"
        android:layout_alignRight="@+id/flashCardImage"
        android:layout_alignBottom="@+id/flashCardImage"
        />

    <TextView
        android:id="@+id/flashCardWord"
        style="@style/FlashCardWordStyle"
        android:text=""
        android:layout_below="@+id/flashCardImage"
        android:gravity="right"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="15dp"
        />

    <ImageView android:id="@+id/imgSpeaker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/flashCardImage"
        android:layout_toRightOf="@id/flashCardWord"
        android:layout_alignBottom="@id/flashCardWord"
        android:src="@drawable/ic_speaker"
        />

    <Button
        android:id="@+id/previousFlashCardBtn"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgSpeaker"
        android:layout_alignLeft="@id/flashCardImage"
        android:layout_marginTop="15dp"
        android:text="Previous" />

    <Button
        android:id="@+id/nextFlashCardBtn"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_below="@+id/flashCardWord"
        android:layout_marginTop="15dp"
        android:layout_alignRight="@+id/flashCardImage"
        android:text="Next" />


</RelativeLayout>
