<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/homeTitle"
        android:text="@string/app_name"
        style="@style/AppTitle"
        />

    <Button
        android:id="@+id/reviewLesson"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/homeTitle"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        android:layout_centerHorizontal="true"
        android:text="Review Last Lesson" />

    <Button
        android:id="@+id/startNewLesson"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/reviewLesson"
        android:layout_marginTop="20dp"
        android:layout_alignStart="@+id/reviewLesson"
        android:text="Start New Lesson" />

    <Button
        android:id="@+id/createLesson"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/startNewLesson"
        android:layout_alignLeft="@+id/reviewLesson"
        android:text="Create Lesson" />

    <Button
        android:id="@+id/manageLearnerBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/createLesson"
        android:layout_alignLeft="@+id/createLesson"
        android:text="Manage Learning Mode" />

    <Button
        android:id="@+id/manageLessonsBtn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/manageLearnerBtn"
        android:layout_alignLeft="@+id/reviewLesson"
        android:text="Delete Lessons" />

</RelativeLayout>
