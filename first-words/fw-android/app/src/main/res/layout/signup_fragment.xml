<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/homeTitle"
        android:text="Sign up"
        style="@style/AppTitle"
        />

    <TextView
        android:id="@+id/signUpStatusMessage"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/homeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:text=""
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        />


    <EditText
        android:id="@+id/signup_username"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_below="@id/signUpStatusMessage"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Username"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_below="@id/signup_username"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:hint="Password"/>

    <EditText
        android:id="@+id/signup_password2"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_below="@id/signup_password"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:hint="Retype password"/>

    <Button
        android:id="@+id/signUp"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/signup_password2"
        android:layout_alignLeft="@+id/signup_password2"
        android:text="Sign Up" />


</RelativeLayout>
