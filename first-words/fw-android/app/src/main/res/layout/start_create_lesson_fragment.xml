<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >

    <TextView
        android:id="@+id/startCreateLesson"
        android:text="New Lesson"
        style="@style/AppTitle"
        />

    <EditText
        android:id="@+id/lessonNameTextView"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_below="@id/startCreateLesson"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Lesson Name"/>


    <EditText
        android:id="@+id/lessonDescTextView"
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:layout_below="@id/lessonNameTextView"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:hint="Description"/>

    <CheckBox
        android:id="@+id/chkSharedLesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_below="@id/lessonDescTextView"
        android:text="Shared" />

    <Button
        android:id="@+id/createLessonNextBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/chkSharedLesson"
        android:text="Next" />

</RelativeLayout>
