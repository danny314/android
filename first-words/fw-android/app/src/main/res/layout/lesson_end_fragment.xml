<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <TextView
        android:id="@+id/lessonCompletedTxt"
        android:text="Lesson Completed!"
        style="@style/AppTitle"
        />

    <ImageView android:id="@+id/upVoteImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="90dp"
        android:layout_below="@id/lessonCompletedTxt"
        android:src="@drawable/ic_vote_up"
        />

    <TextView
        android:id="@+id/upVoteText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/upVoteImg"
        android:layout_alignLeft="@+id/upVoteImg"
        android:layout_marginBottom="7dp"
        android:text="Vote Up"
        android:textStyle="bold"
        />


    <ImageView android:id="@+id/downVoteImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/upVoteImg"
        android:layout_alignTop="@id/upVoteImg"
        android:layout_below="@id/lessonCompletedTxt"
        android:src="@drawable/ic_vote_down"
        />

    <TextView
        android:id="@+id/downVoteText"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/upVoteImg"
        android:layout_toRightOf="@id/upVoteText"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="7dp"
        android:text="Vote Down"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/reviewAgainBtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/upVoteText"
        android:layout_marginLeft="40dp"
        android:text="Review Again" />

    <Button
        android:id="@+id/goHomeBtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/reviewAgainBtn"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/reviewAgainBtn"
        android:text="Home" />

</RelativeLayout>
