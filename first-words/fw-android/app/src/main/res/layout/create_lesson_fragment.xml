<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    >


    <TextView
        android:id="@+id/createLessonTitle"
        android:text="Create Lesson"
        style="@style/AppTitle"
        android:layout_marginBottom="5dp"
        />

    <!-- First row of letters -->
    <TextView
        android:id="@+id/createLessonA"
        android:text="A"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        />

    <TextView
        android:id="@+id/createLessonB"
        android:text="B"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonA"
        />

    <TextView
        android:id="@+id/createLessonC"
        android:text="C"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonB"
        />

    <TextView
        android:id="@+id/createLessonD"
        android:text="D"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonC"
        />

    <TextView
        android:id="@+id/createLessonE"
        android:text="E"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonD"
        />

    <TextView
        android:id="@+id/createLessonF"
        android:text="F"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonE"
        />

    <TextView
        android:id="@+id/createLessonG"
        android:text="G"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonF"
        />

    <TextView
        android:id="@+id/createLessonH"
        android:text="H"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonG"
        />

    <TextView
        android:id="@+id/createLessonI"
        android:text="I"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonTitle"
        android:layout_toRightOf="@id/createLessonH"
        />

    <!-- Second row of letters -->
    <TextView
        android:id="@+id/createLessonJ"
        android:text="J"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonA"
        />

    <TextView
        android:id="@+id/createLessonK"
        android:text="K"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonB"
        android:layout_toRightOf="@id/createLessonJ"
        />

    <TextView
        android:id="@+id/createLessonL"
        android:text="L"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonC"
        android:layout_toRightOf="@id/createLessonK"
        />

    <TextView
        android:id="@+id/createLessonM"
        android:text="M"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonD"
        android:layout_toRightOf="@id/createLessonL"
        />


    <TextView
        android:id="@+id/createLessonN"
        android:text="N"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonE"
        android:layout_toRightOf="@id/createLessonM"
        />

    <TextView
        android:id="@+id/createLessonO"
        android:text="O"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonA"
        android:layout_toRightOf="@id/createLessonN"
        />

    <TextView
        android:id="@+id/createLessonP"
        android:text="P"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonA"
        android:layout_toRightOf="@id/createLessonO"
        />

    <TextView
        android:id="@+id/createLessonQ"
        android:text="Q"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonA"
        android:layout_toRightOf="@id/createLessonP"
        />

    <TextView
        android:id="@+id/createLessonR"
        android:text="R"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonA"
        android:layout_toRightOf="@id/createLessonQ"
        />

    <!-- Third row -->

    <TextView
        android:id="@+id/createLessonS"
        android:text="S"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonJ"
        />

    <TextView
        android:id="@+id/createLessonT"
        android:text="T"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonK"
        android:layout_toRightOf="@id/createLessonS"
        />

    <TextView
        android:id="@+id/createLessonU"
        android:text="U"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonL"
        android:layout_toRightOf="@id/createLessonT"
        />

    <TextView
        android:id="@+id/createLessonV"
        android:text="V"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonM"
        android:layout_toRightOf="@id/createLessonU"
        />

    <TextView
        android:id="@+id/createLessonW"
        android:text="W"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonN"
        android:layout_toRightOf="@id/createLessonV"
        />

    <TextView
        android:id="@+id/createLessonX"
        android:text="X"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonO"
        android:layout_toRightOf="@id/createLessonW"
        />

    <TextView
        android:id="@+id/createLessonY"
        android:text="Y"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonP"
        android:layout_toRightOf="@id/createLessonX"
        />

    <TextView
        android:id="@+id/createLessonZ"
        android:text="Z"
        style="@style/UnusedLetter"
        android:layout_below="@id/createLessonQ"
        android:layout_toRightOf="@id/createLessonY"
        />

    <TextView
        android:id="@+id/wordStartingFrom"
        android:text=""
        style="@style/CurrentLetter"
        android:layout_below="@id/createLessonS"
        android:paddingTop="10dp"
        android:layout_alignBottom="@+id/word"
        />

    <EditText
        android:id="@+id/word"
        android:layout_height="50dp"
        android:layout_width="255dp"
        android:layout_below="@id/createLessonT"
        android:layout_toRightOf="@id/wordStartingFrom"
        android:inputType="text"
        android:imeOptions="actionNext"
        android:hint="Tap on a letter"/>

    <Button
        android:id="@+id/getImageBtn"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@+id/word"
        android:layout_toRightOf="@id/word"
        android:text="Go" />

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="260dp"
        android:layout_below="@id/word"
        android:layout_height="260dp" />

    <ImageView android:id="@+id/useThisImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/word"
        android:layout_below="@id/getImageBtn"
        android:src="@drawable/ic_uparrow"
        />

    <ImageView android:id="@+id/useCameraPic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/word"
        android:layout_below="@id/useThisImage"
        android:src="@drawable/ic_camera"
        />

    <ImageView android:id="@+id/uploadImagePic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/word"
        android:layout_below="@id/useCameraPic"
        android:src="@drawable/ic_blue_folder"
        />

    <ProgressBar
        android:id="@+id/upload_progress"
        style="@android:style/Widget.ProgressBar.Large"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="80dp"
        android:layout_below="@id/word"
        android:visibility="gone"/>


    <Button
        android:id="@+id/newLessonDoneBtn"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        android:layout_below="@+id/pager"
        android:layout_marginLeft="90dp"
        android:text="Done" />


</RelativeLayout>
